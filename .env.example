# Configuração do banco de dados PostgreSQL
# Usuário do banco de dados PostgreSQL
POSTGRES_USER=postgres
# Senha do banco de dados PostgreSQL
POSTGRES_PASSWORD=postgres
# Nome do banco de dados
POSTGRES_DB=pg17-xboot-j21
# Host do banco de dados (nome do serviço no docker-compose)
POSTGRES_HOST=postgres
# Porta do banco de dados PostgreSQL
POSTGRES_PORT=5432

# Configuração da aplicação Spring Boot
# Perfil ativo do Spring Boot
SPRING_PROFILES_ACTIVE=default
# URL de conexão com o banco de dados PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/pg17-xboot-j21
# Usuário para conexão com o banco de dados
SPRING_DATASOURCE_USERNAME=postgres
# Senha para conexão com o banco de dados
SPRING_DATASOURCE_PASSWORD=postgres
# Estratégia de criação/atualização do schema (update, none, create-drop)
SPRING_JPA_HIBERNATE_DDL_AUTO=update
# Exibir queries SQL no console (true/false)
SPRING_JPA_SHOW_SQL=false

# Configuração do servidor da aplicação
# Porta interna da aplicação Spring Boot
SERVER_PORT=8080

# Configuração do LoadBalancer NGINX
# Porta externa do NGINX LoadBalancer
NGINX_PORT=80

# Portas das aplicações para acesso direto (sem LoadBalancer)
# Porta externa da aplicação app1
APP1_PORT=8080
# Porta externa da aplicação app2
APP2_PORT=8081
# Porta externa da aplicação app3
APP3_PORT=8082
